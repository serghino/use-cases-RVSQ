  usecase "Valider signature et empreinte" as UC133_A
  usecase "Rejeter altération détectée" as UC133_B
  usecase "Consigner événement" as UC133_C
}

rectangle "Systèmes Externes" {
  usecase "DME" as DME
  usecase "Service de messagerie" as MSG
}

